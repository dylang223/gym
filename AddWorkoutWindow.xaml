<Window x:Class="gym.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Workout" Height="393" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Category:"/>
            <ComboBox x:Name="CategoryComboBox" Margin="5" SelectedIndex="0">
                <ComboBoxItem Content="Push"/>
                <ComboBoxItem Content="Pull"/>
                <ComboBoxItem Content="Legs"/>
            </ComboBox>
            <TextBlock Text="Exercise Name:" Margin="5"/>
            <TextBox x:Name="ExerciseNameTextBox" Margin="5"/>

            <TextBlock Text="Reps:" Margin="5"/>
            <TextBox x:Name="RepsTextBox" Margin="5"/>

            <TextBlock Text="Sets:" Margin="5"/>
            <TextBox x:Name="SetsTextBox" Margin="5"/>

            <TextBlock Text="Weight (kg):" Margin="5"/>
            <TextBox x:Name="WeightTextBox" Margin="5"/>

            <TextBlock Text="Date:" Margin="5"/>
            <DatePicker x:Name="WorkoutDatePicker" Margin="5"/>

            <Button Content="Add Workout" Click="AddWorkout_Click" Margin="5" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>

