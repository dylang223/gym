<Window x:Class="gym.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gym Workout Tracker" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons Section -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Add Workout" Click="OpenAddWorkoutWindow" Margin="5"/>
            <Button Content="Workout Progress" Click="OpenProgressWindow" Margin="5"/>
        </StackPanel>

        <!-- Workout List -->
        <ListView x:Name="WorkoutListView" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Exercise" DisplayMemberBinding="{Binding Exercise}" Width="200"/>
                    <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="100"/>
                    <GridViewColumn Header="Sets" DisplayMemberBinding="{Binding Sets}" Width="100"/>
                    <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Weight}" Width="100"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
